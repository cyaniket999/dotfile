[global]

# Play sound on notification
    script = ~/.config/dunst/play_sound.sh

    ### Display ###
    monitor = 0
    follow = mouse
    width = 320
    height = 110
    origin = top-right
    offset = 20x55
    scale = 0
    
    # UI Elements
    progress_bar = true
    progress_bar_height = 8
    progress_bar_frame_width = 1
    progress_bar_corner_radius = 4
    indicate_hidden = yes
    transparency = 10
    separator_height = 2
    padding = 15
    horizontal_padding = 15
    text_icon_padding = 15
    
    # Glass Frame
    frame_width = 1
    frame_color = "#33ffffff"
    corner_radius = 12

    ### Typography ###
    font = JetBrainsMono Nerd Font 9
    line_height = 2
    format = "<b>%s</b>\n%b"
    alignment = left
    vertical_alignment = center
    word_wrap = yes
    stack_duplicates = true

    ### MOUSE INTERACTION ###
    # Left click: Close the clicked notification
    mouse_left_click = close_current
    # Middle click: Open context/action (if available) then close
    mouse_middle_click = do_action, close_current
    # Right click: Close ALL notifications at once
    mouse_right_click = close_all

    ### Icons ###
    icon_position = left
    min_icon_size = 32
    max_icon_size = 64
    icon_path = /usr/share/icons/Papirus-Dark/48x48/actions:/usr/share/icons/Papirus-Dark/48x48/apps

[urgency_low]
    background = "#CC1a1b26"
    foreground = "#cfc9c2"
    timeout = 5  # 5 Seconds

[urgency_normal]
    background = "#CC1a1b26"
    foreground = "#ffffff"
    timeout = 5  # 5 Seconds

[urgency_critical]
    background = "#CC1a1b26"
    foreground = "#ffffff"
    frame_color = "#f9423a"
    timeout = 5  # 5 Seconds (Set to 0 if you want criticals to stay forever)